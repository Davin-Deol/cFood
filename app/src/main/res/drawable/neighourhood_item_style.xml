<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:right="1dp" android:left="1dp" android:bottom="2dp" android:top="1dp" android:state_selected="false">
        <shape
            android:shape="rectangle">
            <solid android:color="@color/colorPrimary"/>
            <stroke android:width="3px"
                android:color="@color/colorAccent" />
        </shape>
    </item>
    <item android:right="1dp" android:left="1dp" android:bottom="2dp" android:top="1dp" android:state_selected="true">
        <shape
            android:shape="rectangle">
            <solid android:color="@color/colorPrimarySelected"/>
            <stroke android:width="3px"
                android:color="@color/colorAccent" />
        </shape>
    </item>
</selector>