<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:right="1dp" android:left="1dp" android:bottom="2dp" android:top="1dp" android:state_selected="false">

        <shape>
            <!-- you can use any color you want I used here gray color-->
            <solid android:color="@color/colorAccent"/>
            <corners android:radius="10dp"/>
        </shape>
    </item>
    <item android:right="1dp" android:left="1dp" android:bottom="2dp" android:top="1dp" android:state_selected="true">
        <shape>
            <!-- you can use any color you want I used here gray color-->
            <solid android:color="@color/colorAccentSelected"/>
            <corners android:radius="10dp"/>
        </shape>
    </item>
</selector>